<%= render "topics/topics" %>
<p id="notice"><%= notice %></p>

<h1><%= @topic.title %></h1>
<p>( <%= @topic.comments.length %> comments )</p>
<h3>Content:</h3>
<p>
  <%= @topic.text %>
</p>


<h3>Comments:</h3>
<hr />

<% for c in @topic.comments do %>
	
<div id="comment_<%= c.id %>">
<p><%= c.text %></p>
</div>
<%= link_to_function "Quote it", "quoteIt(#{c.id})" %>
	
	<hr />
<% end %>

<%= form_for [@topic, @topic.comments.build] do |f| %>
	<p><%= f.text_area :text, :rows => 10 %></p>
	<p><%= f.submit "Submit Comment" %></p>
<% end %>

<%= link_to 'Back to the Topics', topics_path %>